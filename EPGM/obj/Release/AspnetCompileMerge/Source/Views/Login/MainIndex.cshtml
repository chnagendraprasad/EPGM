<script type="text/javascript">
    $(document).ready(function () {
        $("#StateID").prop('selectedIndex', 0);
        $("#StateID").focus();

        $("#btngo").click(function () {
            debugger;
            if ($("#StateID").val() == "" || $("#StateID").val() == "0" || $("#StateID").val() == null) {
                $("#msg").text("Please Select State");
                $("#StateID").focus();
                return false;
            }
            else {
                url = '@Url.Action("MainPage", "Login")?StateCode=' + $("#StateID").val()
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: url,
                    data: "{}",
                    dataType: "json",
                    success: function (Result) {
                        debugger;
                        if (Result != "") {
                            location.href = Result;
                        }
                    },
                    error: function (result) {
                    }

                });
            }
        });
    });

    function CheckState() {
        if ($("#StateID").val() == "" || $("#StateID").val() == "0" || $("#StateID").val() == null) {
            $("#msg").text("Please Select State");
            $("#StateID").focus();
            return false;
        }
        else {
            $("#msg").text("");
        }
    }
</script>
