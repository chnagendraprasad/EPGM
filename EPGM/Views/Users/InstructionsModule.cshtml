<style type="text/css">
    .btn-primary {
    color: #fff !important;
    background-color: #428bca !important;
    border-color: #357ebd !important;
}
    .Viewbtn {
        /*background-color: #525659 !important;*/
        color: white;
        font-weight: bold;
        border-radius: 4px;
        width: 25%;
        border: 0px;
    }

    .clears {
        padding-top: 10px !important;
    }

    .Panel_box {
        background: #ffffff;
        box-shadow: 0px 0px 8px 0px rgba(50, 50, 50, 0.54);
        width: 40%;
        min-width: 150px;
        padding: 10px 0;
