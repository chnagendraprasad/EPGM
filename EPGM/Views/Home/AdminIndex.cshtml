@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<script>
    var dtnor = @Html.Raw(Json.Encode(ViewBag.Normal))
    var dtmod = @Html.Raw(Json.Encode(ViewBag.Moderate))
    var dtsev = @Html.Raw(Json.Encode(ViewBag.Severe))
    var dtabs = @Html.Raw(Json.Encode(ViewBag.Absent))
</script>

<script src="~/Scripts/Home/AdminIndex.js"></script>

<style>
    th.ui-th-column div {
        white-space: normal !important;
        height: 35px !important;
    }
    .col-md-4 {
        padding-right: 0px !important;
    }
    .col-md-8 {
        padding-left: 0px !important;
    }

    .ui-th-ltr, .ui-jqgrid .ui-jqgrid-htable th.ui-th-ltr {
        border-left: 0px !important;
        border-top: 0px !important;
        border-right: 0px !important;
    }

    .ui-jqgrid tr.ui-row-ltr td {
        border-right-width: 0px !important;
        border-left-width: 0px !important;  
    }
    .ui-jqgrid {
        padding-left: -10px !important;
    }
    tr {
        background-color: white;
    }
    .GNor {
        background-color: #00a65a !important;
        color: white !important;
    }
    .GMod {
        background-color: #f39c12 !important;
        color: white !important;
    }
    .GSev {
        background-color: #dd4b39 !important;
        color: white !important;
    }
    .GAbs {
        background-color: #00c0ef !important;
        color: white !important;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <div class="back-white text-center back4"><b>Andhra Pradesh State Dashboard</b></div>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-4">
                <div class="box" style="min-height: 294px; border-right-width: 1px !important; border-right: 1px solid black; border-radius: 0px !important; border-top: none;">
                    <div class="box-body">
                        <p class="text-center ">
                            <strong>State Wise Statistics</strong>
                        </p>
                        <br />
                        <div class="progress-group">
                            <span class="progress-text">Districts</span>
                            <span class="progress-number"><b>@ViewBag.DistCount</b></span>
                            <div class="progress sm">
                                <div class="progress-bar progress-bar-green" style="width: 100%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <span class="progress-text">Projects</span>
                            <span class="progress-number"><b>@ViewBag.ProjCount</b></span>
                            <div class="progress sm">
                                <div class="progress-bar progress-bar-red" style="width: 100%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <span class="progress-text">Sectors</span>
                            <span class="progress-number"><b>@ViewBag.SecCount</b></span>
                            <div class="progress sm">
                                <div class="progress-bar progress-bar-aqua" style="width: 100%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <span class="progress-text">AWCs</span>
                            <span class="progress-number"><b>@ViewBag.AWCs</b></span>
                            <div class="progress sm">
                                <div class="progress-bar progress-bar-yellow" style="width: 100%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <table id="DistGrid"></table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="box" style="min-height: 294px; border-right-width: 1px !important; border-right: 1px solid black; border-radius: 0px !important; border-top: none;">
                    <div class="box-body">
                        <p class="text-center ">
                            <strong>State Wise Statistics</strong>
                        </p>
                        <br />
                        <div class="col-md-5">
                            <div class="chart-responsive">
                                <canvas id="pieChart" height="155" width="205" style="width: 205px; height: 155px;"></canvas>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <table class="table" >
								<thead>
									<tr>
										<th>
											<div class="circle1 back1"></div>
										</th>
										<th>Normal</th>
										<th>@ViewBag.NorPer%</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>
											<div class="circle1 back2"></div>
										</td>
										<td>Moderately Under Weight</td>
										<td>@ViewBag.ModPer%</td>
									</tr>
									<tr>
										<td>
											<div class="circle1 back3"></div>
										</td>
										<td>Severly Under Weight</td>
										<td>@ViewBag.SevPer%</td>
									</tr>
									<tr>
										<td>
											<div class="circle1 back4"></div>
										</td>
										<td>Absent</td>
										<td>@ViewBag.AbsPer%</td>
									</tr>
								</tbody>
							</table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <table id="DistDetailsGrid"></table>
            </div>
        </div>
    </section>
</div>

